			},
			submit() {
				if (this.addressData.name == null) {
					this.$api.msg("请选择收货地址");
					return;
				}

				if (this.goodList == null || this.goodList.length <= 0) {
					this.$api.msg("请选择商品");
					return;
				}

				var that = this;
				that.$http({ //调用接口
					method: 'POST',
					params: {
						cartIds: that.cartIds,
						goodId: that.goodId,
						number: that.number,
						couponId: -1,
