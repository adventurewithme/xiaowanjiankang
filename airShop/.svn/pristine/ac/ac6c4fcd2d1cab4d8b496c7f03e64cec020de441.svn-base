<script>
	export default {
		data() {
			return {
				comList: [{
					id: 1,
					name: "大兴"
				}, {
					id: 2,
					name: "朝阳"
				}, {
					id: 3,
					name: "通州"
				}],
				goodslist: [], //商品列表
				conditions: [{ //筛选条件
					id: 1,
					name: '条件1'
				}, {
					id: 2,
					name: '条件2'
				}],
				brandId: undefined, //当前选中的筛选条件
				comId: 2, //一级条件ID
				page: 1,
				size: 10,
				loading: true,

			};
		},
		onLoad() {
			this.loadData();
		},
		methods: {
			async loadData() {
				var that = this;
				that.$http({ //调用接口
					method: 'GET',
					url: this.global.target + "/wx/company/listyuyue" //this指data
				}).then(function(response) { //接口返回数据
					var list = response.data.data.list;
					that.comList = list;
					that.comId = list[0].id;
				}, function(error) {})
				this.loadBand();

			},
			async loadBand() {
				var that = this;
				that.$http({ //调用接口
					method: 'GET',
					params: {
						comId: this.comId
					},
					url: this.global.target + "/wx/brand/list" //this指data
				}).then(function(response) { //接口返回数据
					that.conditions = response.data.data.list;
				}, function(error) {})

				this.loadGoods(1);
			},
			async loadGoods(type) {
				var loading = this.loading;
				if (loading == true) {
					var that = this;
					var page = that.page;
					var size = that.size;
					that.$http({ //调用接口
						method: 'GET',
						params: {
							comId: this.comId,
							brandId: this.brandId,
							page: this.page,
							limit: this.size
						},
						url: this.global.target + "/wx/tablelist/yuyue" //this指data
					}).then(function(response) { //接口返回数据
						console.log(response.data.data)
						var total = response.data.data.total;
						if (total == 0) {
							that.$api.msg("无数据");
						}
						var num = page * size;
						if (total <= num) {
							that.loading = false;
						}
						var glist = response.data.data.list;
						if (type) {
							that.goodslist = glist;
							document.documentElement.scrollTop = 0;
						} else {
							glist.forEach(item => {
								that.goodslist.push(item);
							})
						}
						that.page++;
						uni.hideLoading()
					}, function(error) {})
				}

			},

			//详情页
			navToDetailPage(item) {
				//测试数据没有写id，用title代替
				let id = item.id;
				uni.navigateTo({
					url: `/pages/product/product?id=${id}&from=appointment`
				})
			},
			changecondition(id) { //切换筛选条件
				this.brandId = id;
				this.loading = true;
				this.page = 1;
				this.loadGoods(1);
			},
			changeAirport(id) {
				this.comId = id;
				this.loading = true;
				this.page = 1;
				this.loadBand(id);
				this.loadGoods(1);
			}

		}
	}
</script>

